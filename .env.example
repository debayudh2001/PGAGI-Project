# News API (GNews)
# Get your free API key from: https://gnews.io/
NEXT_PUBLIC_NEWS_API_KEY=your_gnews_api_key_here

# TMDB API (The Movie Database)
# Get your access token (v4 auth) from: https://www.themoviedb.org/settings/api
# Important: Use the "API Read Access Token" NOT the "API Key"
NEXT_PUBLIC_TMDB_ACCESS_TOKEN=your_tmdb_access_token_here

# API Base URLs (optional - defaults provided)
NEXT_PUBLIC_NEWS_API_URL=https://gnews.io/api/v4
NEXT_PUBLIC_TMDB_API_URL=https://api.themoviedb.org/3
